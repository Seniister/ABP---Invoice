@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model InvoiceApp.Pages.InvoiceModalModel
@{
    Layout = null;
}
@section Styles{
     <abp-style src="/Pages/InvoiceModal.cshtml.css" />
}
 <abp-dynamic-form abp-model="Invoice" action="@Url.Page("/InvoiceModal")" > 
<abp-modal >
    <abp-modal-header title="Invoice Information"></abp-modal-header>
    <abp-modal-body>
   
         <abp-form-content />
         <h3>Items:</h3>
         @for (int i = 0; i < @Model.Line.Length ; i++)
            {
             <div class="row" >
                 <div class="col-6"><abp-input  asp-for="Line[i].Name" name="Invoice.Line[@i].Name" />  </div>
        
                 <div class="col-6">  <abp-input asp-for="Line[i].Price"  name="Invoice.Line[@i].Price" />  </div>
             </div>
            }
      
    </abp-modal-body>
    <abp-modal-footer buttons="@AbpModalButtons.Save | @AbpModalButtons.Cancel"></abp-modal-footer>
</abp-modal>
</abp-dynamic-form>

